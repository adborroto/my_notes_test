


<div class="uk-vertical-align-middle center">

  <h3>New note</h3>
  <div class="uk-card-default uk-card-body">
    <p style="color: green"><%= notice %></p>
    <%= render "form", note: @note %>
  </div>

  <h3>My notes</h3>
  <div class="uk-card uk-card-default uk-card-body">
    <% @notes.each do |note| %>
      <%= render note %>
    <% end %>
  </div>
  
</div>

