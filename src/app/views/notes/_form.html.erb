<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="uk-margin">
    <%= form.text_field :title, class: 'uk-input', placeholder: 'Note name' %>
  </div>

  <div class="uk-margin">
    <%= form.text_area :description, class: 'uk-textarea', placeholder: 'Description...' %>
  </div>

  <div class="uk-margin">
    <%= form.submit 'Create a note', :class => 'uk-button uk-button-primary uk-width-1-1' %>
  </div>
<% end %>
